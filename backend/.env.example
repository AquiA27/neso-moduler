# ========================================
# Neso Modular System - Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# For Render deployment, set these in the Dashboard > Environment tab

# ---------- Application ----------
ENV=prod
APP_NAME=Neso Asistan API
VERSION=0.1.0

# ---------- Database ----------
# Render will provide the DATABASE_URL automatically if you use Internal Connection String
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname

# Optional: separate menu database
# MENU_DATABASE_URL=postgresql+asyncpg://user:password@host:port/menu_db

# ---------- Security ----------
# IMPORTANT: Generate a strong random secret key for production!
# You can use: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ---------- Default Admin User ----------
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=change-this-password

# ---------- CORS (Frontend URLs) ----------
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-frontend.onrender.com,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# ---------- Rate Limiting ----------
# 0 = disabled (dev only), recommended: 60-120 for production
RATE_LIMIT_PER_MINUTE=60
REQUEST_LOG_ENABLED=True
ADD_REQUEST_ID_HEADER=True

# ---------- OpenAI (Optional) ----------
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
ASSISTANT_ENABLE_LLM=True
ASSISTANT_ENABLE_TTS=True
ASSISTANT_ENABLE_STT=True

# ---------- TTS Provider (Optional) ----------
# Options: system, google, azure, aws, openai
TTS_PROVIDER=system
OPENAI_TTS_MODEL=tts-1

# Google Cloud TTS (Optional)
GOOGLE_TTS_API_KEY=
GOOGLE_TTS_PROJECT_ID=

# Azure Speech Services (Optional)
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# AWS Polly (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=

# ---------- Redis Cache (Optional) ----------
# Set to True if you have a Redis instance
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=20
REDIS_SOCKET_TIMEOUT=5

# ---------- Cache TTL (seconds) ----------
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=1800

# ---------- Backup (Optional) ----------
BACKUP_ENABLED=False
BACKUP_SCHEDULE_CRON=0 2 * * *

# ---------- Media/Upload ----------
MEDIA_URL=/media
MAX_UPLOAD_SIZE_MB=5
