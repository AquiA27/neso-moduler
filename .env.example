# Environment Configuration Template
# Copy this file to .env and fill in your actual values

ENV=dev
APP_NAME=Neso Asistan API
VERSION=0.1.0

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dbname
# MENU_DATABASE_URL=

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:5173"]

# Security - IMPORTANT: Generate strong keys for production!
# Generate SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-secret-key-here-use-strong-random-value
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=120
REQUEST_LOG_ENABLED=true
ADD_REQUEST_ID_HEADER=true

# LLM / OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Optional: Logging
# LOG_LEVEL=INFO
# SENTRY_DSN=

# Optional: Redis for caching/rate limiting
# REDIS_URL=redis://localhost:6379/0
